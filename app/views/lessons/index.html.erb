<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <h1 class="h4 mb-5">Screencasts</h1>
    </div>

    <div class="col-md-6">
      <form class="lesson_search" id="lesson_search" action="/episodes" accept-charset="UTF-8" method="get">
        <input name="utf8" type="hidden" value="âœ“">
        <div class="form-group mb-0">
          <div class="input-group input-group-transparent">
            <input placeholder="Search by name..." class="form-control form-control-sm" type="search" name="q[name_or_description_cont]" id="q_name_or_description_cont">
            <div class="input-group-append">
              <button name="button" type="submit" class="btn btn-sm btn-primary">
                <i class="fas fa-search mr-3"></i>
                Search
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">

    <%= render 'list', lessons: @lessons %>

    <div class="col-md-2 offset-md-1 text-sm forum-thread-filters">
      <h6 class="text-muted">Sort By</h6>
      <div class="list-group">
        <%= link_to "Published Date", lessons_path(direction: "asc", sort: "number"),class: "active desc sortable list-group-item list-group-item-action" %>
        <%= link_to "Popularity", lessons_path(direction: "desc", sort: "hearts_count"),class: "sortable list-group-item list-group-item-action" %>
      </div>

      <h6 class="text-muted mt-4">Categories</h6>
      <div class="list-group">
        <%= link_to "tag1", lessons_path, class: "list-group-item list-group-item-action" %>
      </div>
    </div>

  </div>
</div>
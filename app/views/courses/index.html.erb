


<div class="row">
  <div class="col-sm-6">
    <h1>Courses</h1>
  </div>

  <div class="col-sm-6 text-right">
    <% if is_admin? %>
      <%= link_to new_course_path, class: 'btn btn-primary' do %>
        Add New Course
      <% end %>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <%= content_tag :tr, id: dom_id(course), class: dom_class(course) do %>
          
            <td><%= link_to course.name, course %></td>
          

                      <td><%= course.description %></td>
                      <td><%= course.price %></td>
                      <td><%= course.discount %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <h1 class="h4 mb-5">Courses</h1>
    </div>

    <div class="col-md-6">
      <%= form_with(url: courses_path, local: true, method: :get) do |form| %>
        <div class="form-group mb-0">
          <div class="input-group input-group-transparent">
            <%= form.text_field :course_search, type: "search", class: 'form-control  form-control-sm', placeholder: "Search by name..." %>
            <div class="input-group-append">
              <button name="button" type="submit" class="btn btn-sm btn-primary">
                <i class="fas fa-search mr-3"></i>
                Search
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
<div class="col-md-9">
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Price</th>
            <th>Discount</th>
            
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <%= content_tag :tr, id: dom_id(course), class: dom_class(course) do %>
          
            <td><%= link_to course.name, course %></td>
          

                      <td><%= course.description %></td>
                      <td><%= course.price %></td>
                      <td><%= course.discount %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<div class="col-md-2 offset-md-1 text-sm forum-thread-filters">
<h6 class="text-muted">Sort By</h6>
<div class="list-group">
  <%= link_to "Published Date", courses_path(direction: "asc", sort: "number"),class: "active desc sortable list-group-item list-group-item-action" %>
  <%= link_to "Popularity", courses_path(direction: "desc", sort: "hearts_count"),class: "sortable list-group-item list-group-item-action" %>
  <%= link_to "Price (ASC)", courses_path(direction: "asc", sort: "price"),class: "sortable list-group-item list-group-item-action" %>
  <%= link_to "Price (DESC)", courses_path(direction: "desc", sort: "price"),class: "sortable list-group-item list-group-item-action" %>
</div>

<h6 class="text-muted mt-4">Categories</h6>
<div class="list-group">
  <% @tags.each do |tag| %>
    <%= link_to tag.name, lessons_tag_path(tag.name), class: "list-group-item list-group-item-action" %>
  <% end %>
</div>
</div>
</div>
</div>